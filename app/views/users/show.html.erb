<div class="page-header">
  <h1>Perfil y Post del Usuario </h1>
</div>

<dl class="dl-horizontal">
 <dt><strong><%= model_class.human_attribute_name(:Usuario) %>:</strong></dt>
  <dd><%= @user.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Apellidos) %>:</strong></dt>
  <dd><%= @user.apellidos %></dd>

  <dt><strong><%= model_class.human_attribute_name(:Email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  
