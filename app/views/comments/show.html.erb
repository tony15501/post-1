

<%- model_class = Comment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Comentrio) %>:</strong></dt>
  <dd><%= @comment.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Post) %>:</strong></dt>
  <dd><%= @comment.post.titulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Nombre_del_usuario) %>:</strong></dt>
  <dd><%= @comment.user.nombre%></dd>

  
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              comments_path, :class => 'btn'  %>
            

  
</div>