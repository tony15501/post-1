<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Titulo) %>:</strong></dt>
  <dd><%= @post.titulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Comentario) %>:</strong></dt>
  <dd><%= @post.comentario %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Usuario) %>:</strong></dt>
  <dd><%= @post.user.email%></dd>

  
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              root_path, :class => 'btn'  %>
              <%= link_to 'perfil', users_path %>

  
</div>
