<%- model_class = Post -%>


<div class="page-header">
<table>
  <tr>
    <th><h1><FONT FACE="arial" SIZE=20>Lista de Post</FONT> </h1></th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
     <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th><%= link_to t('.new', :default => t("helpers.links.new")),
            new_post_path,
            :class => 'btn btn-primary' %></th>
  </tr>
</table>
   
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:titulo) %></th>
      <th><%= model_class.human_attribute_name(:comentario) %></th>
      
      
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.id, post_path(post) %></td>
        <td><%= post.titulo %></td>
        <td><%= post.comentario %></td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

