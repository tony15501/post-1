<center>

<h1><FONT  SIZE=30>Hola, Inicia sesión</FONT></h1>



<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div ><%= f.label :Correo %><br />
  <%= f.email_field :email, :autofocus => true, :class => 'input-small', :placeholder =>"Correo" %></div>

  <div><%= f.label :contraseña %><br />
  <%= f.password_field :password, :class => 'input-small', :placeholder =>"Contraseña" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div ><%= f.submit "Entrar", :class => 'btn' %></div>
<% end %>

<%= render "devise/shared/links" %>
</center>