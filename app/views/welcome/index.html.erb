<%- model_class = Post -%>

<div class="page-header">
<table>
  <tr>
    <th><h1> Lista de post</h1></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    </th>
    
</table>
  
</div>
<table class="table table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name('#') %></th>
      <th><%= model_class.human_attribute_name(:Titulo) %></th>
      <th><%= model_class.human_attribute_name(:Comentario) %></th>
      <th><%= model_class.human_attribute_name(:Usuario) %></th>
      
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.id, post_path(post) %></td>
        <td><%= post.titulo %></td>
        <td><%= post.comentario %></td>
        <td><%= post.user.email %></td>
        <td><%=l post.created_at %></td>
        <td>
        
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_post_path(post), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      post_path(post),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


